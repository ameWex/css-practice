{{> header}}

<main class="main">
    {{#with info}}
    <div class="info">
        <h1 class="info_title">{{title}}</h1>
        <p class="info_description">{{description}}</p>
    </div>
    {{/with}}
    {{#with form}}
    <form class="form">
        <h2 class="form_title">{{title}}</h2>

        <div class="form_input_list">
            {{#each inputs}}
            <input class="form_input" placeholder="{{placeholder}}" type="{{type}}" name="{{name}}" id="{{id}}">
            {{/each}}
        </div>

        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>

        <button type="submit" class="form_button">{{button}}</button>
        <div class="border"></div>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>

<div class="updates">
    {{#with updates}}
    <h2 class="updates_title">{{title}}</h2>
    {{#each list}}
    <div class="list_item">
        <img class="updates_img" src="https://picsum.photos/32/32" alt="pic">
        <div class="list_content">
            <div class="nickname">{{nickname}}</div>
            <div class="list_description">{{description}}</div>
        </div>
    </div>
    {{/each}}
    {{#with show_all}}
    <div class="show_all_cont">
        <a href="{{url}}" class="show_all">{{text}}</a>
    </div>
    {{/with}}
    {{/with}}
</div>

<div class="experience">
    <div class="exp_container">
        {{#with experience}}
        <div class="exp_hot-title">
            <div class="exp_title">{{title}}</div>
            <span class="badge">{{badge}}</span>
        </div>
        <div class="exp_list">
            {{#each list}}
            <div class="exp_list_item">
                <div class="exp_name">{{name}}</div>
                <div class="exp_details">{{details}}</div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </div>
</div>

{{> footer}}