<div class="hero block_content">
    {{#with hero}}
    <h1 class="hero_title">{{title}}</h1>
    <p class="hero_description">{{description}}</p>
    {{#with button}}
    <a href="{{url}}" class="hero_btn">{{text}}</a>
    {{/with}}
    {{/with}}
</div>


<div class="about block_content ">
    {{#with about}}
    <h2 class="about_heading">{{heading}}</h2>
    <p class="about_info">{{info}}</p>
    {{/with}}
</div>

<div class="articles block_content">
    <div class="articles_header">
        <div class="articles_title">our articles</div>
        <button class="articles_btn">view all</button>
    </div>
    <div class="articles_content">
        {{> articleCardDark}}
    </div>
</div>