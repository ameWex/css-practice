<div class="page">
    <div class="page_content">
        <div class="page_block">
            <header class="header row g-0">
                <div class="col-3">
                    {{> logo}}
                </div>

                <nav class="header_nav col-9">
                    <div class="header_nav_right">
                        {{> nav list=header}}
                    </div>
                </nav>
            </header>
            {{> divider}}
        </div>
        <div class="page_block">
            <div class="hero">
                {{> hero title=hero.title text=hero.text}}
                {{#with hero.button}}
                <a class="button" href="{{url}}">{{text}}</a>
                {{/with}}
            </div>
        </div>

        <div class="page_block">
            <div class="row g-4">
                {{#each preview}}
                <div class="col-6">
                    {{> cardPreview data=this}}
                </div>
                {{/each}}
            </div>
        </div>

        <div class="page_block">
            <main class="main">
                <div class="row g-0">
                    <div class="col-12">
                        <div class="list_header">
                            <div class="row">
                                <div class="col-6">
                                    <h2 class="list_title">List of posts</h2>
                                </div>
                                <div class="col-6 text-end">
                                    {{#each categories}}
                                    <button class="category_button">{{text}}</button>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-7">
                        <div class="list">
                            {{#each news}}
                            {{> cardPost data=this}}
                            {{/each}}
                        </div>
                    </div>
                    <div class="col-5">
                        <div class="list_aside">
                            <div class="about">
                                <h4 class="about_title">About</h4>
                                <p class="about_text">{{about}}</p>
                            </div>

                            {{> linkList data=archive title='Archives'}}

                            {{> linkList data=social title='Social'}}
                        </div>
                    </div>
                </div>
            </main>
        </div>

        <div class="page_block">
            {{> divider}}
            <footer class="footer row">
                <div class="col-3">
                    {{> logo}}
                    <span class="copyright">Copyright 2023-2024</span>
                </div>

                {{#each footer}}
                <div class="col-3">
                    <span class="footer_title">{{title}}</span>
                    {{> nav list=links isVertical=true}}
                </div>
                {{/each}}
            </footer>
        </div>
    </div>
</div>